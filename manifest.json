{
  "name": "Link Organizer",
  "description": "Professional link management with lists, drag & drop, sync and dark mode.",
  "version": "1.1",
  "manifest_version": 3,

  "permissions": [
    "storage",
    "tabs",
    "activeTab",
	"downloads"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },

  "commands": {
    "toggle-popup": {
      "suggested_key": {
        "default": "Ctrl+Q"
      },
      "description": "Toggle Link Organizer"
    }
  }
}
